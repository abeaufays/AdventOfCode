{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run associated test file",
            "type": "shell",
            "command": "${command:python.interpreterPath} -m pytest ${fileDirname}/test_${fileBasename}",
            "problemMatcher": [
                "$python"
            ],
            "options": {
                "cwd": "."
            }
        }
    ]
}